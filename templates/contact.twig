{% extends "layout.twig" %}
{% block content %}

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="uppercase text-center">Me contacter</h1>
      <form action="index.php?controller=Contact&action=contact" method="post">
      {{ block('alert') }}
        <div class="form-group">
          <label for="firstname">Prénom* :</label>
          <input type="text" name="firstname" class="form-control" id="firstname"  required>
        </div>
        <div class="form-group">
          <label for="lastname">Nom* :</label>
          <input type="text" name="lastname" class="form-control" id="lastname"  required>
        </div>
        <div class="form-group">
          <label for="email">E-mail* :</label>
          <input type="email" name="email" class="form-control" id="email"  required>
        </div>
        <div class="form-group">
          <label for="message">Message* :</label>
          <textarea class="form-control" name="message" id="message" rows="8" cols="80" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary float-right" id="contact">Envoyer</button>
      </form>
      <!-- Pager -->
      <div class="clearfix">
        <a class="btn btn-secondary" href="/">Retour à l'accueil</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}
