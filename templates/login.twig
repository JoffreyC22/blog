          <label for="password">Mot de passe :</label>
          <input type="password" class="form-control" name="password" id="password" required>
        </div>
        <button type="submit" class="btn btn-primary float-right" id="login">Connexion</button>
      </form>
      <!-- Pager -->
      <div class="clearfix">
        <a class="btn btn-secondary" href="/">Retour Ã  l'accueil</a>
      </div>
    </div>
  </div>
