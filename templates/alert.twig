{% extends "layout.twig" %}
{% block content %}

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          {% if alert.type == 'danger' %}
            <div class="alert alert-danger">
              <p>{{ alert.message }}</p>
            </div>
          {% else %}
            <div class="alert alert-success">
              <p>{{ alert.message }}</p>
            </div>
          {% endif %}
        </div>
      </div>
    </div>

    <hr>

{% endblock %}
